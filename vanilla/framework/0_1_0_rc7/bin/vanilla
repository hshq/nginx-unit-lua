#!/usr/bin/env luajit
package.path = './?.lua;' .. package.path --;; didn't contains ./?.lua in cli

LoadV = function ( ... )
    return require(VANILLA_ROOT .. '/' .. VANILLA_VERSION_DIR_STR .. '/' .. ...)
end

